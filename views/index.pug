extends header-layout

block content
  // slider
  .container  
    #carouselExampleIndicators.carousel.slide.overflow-hidden(data-ride='carousel' style="height:420px;")
      ol.carousel-indicators
        li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
        li(data-target='#carouselExampleIndicators', data-slide-to='1')
        li(data-target='#carouselExampleIndicators', data-slide-to='2')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='https://i.ibb.co/KqGGgK6/bn01.jpg', width="100%" alt='First slide')
        .carousel-item
          img.d-block.w-100(src='https://i.ibb.co/7WBbF34/bn02.jpg', width="100%" alt='Second slide')
        .carousel-item
          img.d-block.w-100(src='https://i.ibb.co/yp8TWdp/xongxoa.jpg', width="100%" alt='Third slide')
      a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
    // Chào mừng bạn đến với Ez
  
  // chào mừng đến với ez
  section.featured-courses.horizontal-column.courses-wrap
    .container
      .row
        .col-12
            header.heading.flex.justify-content-center.align-items-center.flex-column.flex-lg-row
              div
                h2.entry-title.text-center Chào mừng bạn đến với Ez
                p
                | "Thế giới học tiếng anh cho trẻ em với phương pháp phù hợp cho trẻ nhỏ"
  .container
    .row
      .col-12.col-lg-6
        .about-stories.m-auto(style="width:70%")
          h3 Các ưu điểm của Ez
          ul.p-0.m-0.list-unstyled
            li.pt-3 
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Các khóa học được tạo bởi các chuyên gia
            li.pt-3
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Phương pháp phù hợp nhất với trẻ nhở
            li.pt-3
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Có thể học ở mọi lúc mọi nơi
      .col-12.col-lg-6
        .about-values.m-auto(style="width:70%")
          h3 Các ưu điểm của Ez
          ul.p-0.m-0.list-unstyled
            li.pt-3
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Nhiều khóa học miễn phí
            li.pt-3
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Các khóa học đa dạng
            li.pt-3
              span
                i.fas.fa-check.mr-3(style="color:#0c390e;") 
              | Giao diện đẹp thu hút sự chú ý của trẻ nhỏ
              
  // giới thiệu về ez
  section.featured-courses.horizontal-column.courses-wrap
    .container
      .row
        .col-12.col-lg-12.align-content-lg-stretch
          header.heading
            h2.entry-title.text-center.text-md-left(style="text-align:center !important;") Thông tin về Ez
            p
          .entry-content.ezuca-stats(data-aos="fade-out")
            .stats-wrap.flex.justify-content-lg-between
              .stats-count(style="color:#0c390e;")
                | 1M+
                span 
                p Học viên tham gia
              .stats-count(style="color:#0c390e;")
                | 30+
                span 
                p Khóa học
              .stats-count(style="color:#0c390e;")
                | 30K+
                span 
                p Sử dụng hằng tháng
              .stats-count(style="color:#0c390e;")
                | 10+
                span
                p Tỉnh thành trong cả nước

  // các khóa học nổi bật
  section.featured-courses.horizontal-column.courses-wrap
    .container
      .row
        .col-12
          header.heading.flex.justify-content-between.align-items-center.flex-column.flex-lg-row
            h2.entry-title.text-center Các khóa học nổi bật
            a.btn.mt-4.mt-sm-0(href='../courses' style="border-color:#0c390e;")
              | Xem tất cả
              i.fas.fa-arrow-right
        each course in dataCourse
          .col-12.col-lg-4.d-flex
            .card(style='width: 100%;', data-aos="zoom-in")
              img.card-img-top(src=`${course.img_baner}`, width="100%", alt='Card image cap')
              .card-body.d-flex.flex-column.justify-content-between
                h5.card-title= course.name_course
                p.card-text= course.describe
                p.d-flex.align-items-center(style="color:#f3a90b;")
                  span.fa.fa-star.checked
                  span.fa.fa-star.checked
                  span.fa.fa-star.checked
                  span.fa.fa-star.checked
                  span.fa.fa-star-o
                  span.course-ratings-count(style="color:rgba(1,1,1,0.4)") (4 votes)
                p
                  b price
                if !checkLogged
                  a.btn.text-white.btn-primary.border-0(style="background:#0c390e;" href=`../learnTry?idCourse=${course.id}`) Học thử
                else
                  a.btn.text-white.btn-primary.border-0(style="background:#0c390e;" href=`../detail?idCourse=${course.id}`) Tham gia khóa học
  
  // đánh giá
  section.featured-courses.horizontal-column.courses-wrap
    .container
      .row
        .col-12
          header.heading.flex.justify-content-center.align-items-center.flex-column.flex-lg-row
            h2.entry-title.text-center Phản hồi của phụ huynh
            br
