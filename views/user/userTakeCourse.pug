block userTakeCourse
.row
  .col-12
    h2 Các khóa học bạn đã tham gia
  br
  br
  if myCourses
    .row
      each myCourse in myCourses 
        .col-sm-6.col-12.mb-4
          .m-auto.border.p-2(style='width:70%;box-shadow:0px 1px 3px 1px #bebed8;')
            a.text-dark(href='../detail?idCourse=' + myCourse.id, style='text-decoration:none; ')
              img(src=myCourse.img_baner, width='100%', alt='')
              h5= myCourse.name_course
              p= myCourse.describe 
              hr
              // thông tin của t
              div
                p L&#x1EA7;n v&agrave;o cu&#x1ED1;i c&ugrave;ng
                p ho&agrave;n th&agrave;nh bao nhi&ecirc;u ph&#x1EA7;n tr&abreve;m
  else
    div.text-center 
      p Bạn chưa tham gia khóa học nào
      a(href='../users/courses') Tham gia khóa học