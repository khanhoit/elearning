block userTakeCourse
  // Các khóa học đã tham gia
  .m-auto.userTakeCourse(style="width:70%")
    .row
      .col-12.my-3
        h5 Các khóa học đã tham gia
      if myCourses.length!==0
        each myCourse in myCourses 
          .col-12.my-3
            a.text-dark(href='../detail?idCourse=' + myCourse.id, style='text-decoration:none; ')
              .card.flex-row.ml-3
                .card-header.border-0(style="width:30%")
                  img(src=myCourse.img_baner, width='100%', alt='')
                .card-block.p-2
                  h4.card-title= myCourse.name_course
                  p.card-text= myCourse.describe 
      else
        .col-12.p-5.m-5
          div.text-center 
            p Bạn chưa tham gia khóa học nào
            a(href='../courses' style="color:#19c880;") Tham gia khóa học
      