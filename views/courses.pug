extends header-layout

block content
  .hero-content
    .page-header-overlay
      .container
        .row  
          .col-12
            header.entry-header.text-center.text-white
              h1 COURSES
  //- path
  .container
    .row
      .col-12
        .breadcrumbs
          ul.flex.flex-wrap.align-items-center.p-0.m-0
            li
              a(href='../')
                i.fa.fa-home
                |  Home
            li Courses
  
  //- allcourse
  .container
    .row.mx-m-25
      .col-12
        h3 Tất cả các khóa học
      .col-12.col-md-6.px-25
        .course-content
          figure.course-thumbnail
            img(src='https://i.ibb.co/TDytpCR/banner2.png', alt='')
          .course-content-wrap
            header.entry-header
              h2.entry-title
                | khóa học bảng chữ cái cho trẻ em
              .entry-meta.flex.flex-wrap.align-items-center
                .course-author  
                .course-create-date Ngày tạo: July 21, 2018
            footer.entry-footer.flex.flex-wrap.justify-content-between.align-items-center
              .course-cost
                a(href="#")
                  button.btn.btn-primary.border-0(type="button" style="background-color: #19c880") Tham gia khóa học
              .course-ratings.flex.justify-content-end.align-items-center
                span.fa.fa-star.checked
                span.fa.fa-star.checked
                span.fa.fa-star.checked
                span.fa.fa-star.checked
                span.fa.fa-star-o
                span.course-ratings-count (4 votes)
   
  br
  br
  include ./footer.pug